<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_move_form_qr" model="ir.ui.view">
            <field name="name">account.move.form.qr</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="after">
                    <div class="o_qr_container" invisible="state != 'posted'">
                        <field name="x_vietqr_code"/>
                    </div>
                </xpath>
                <xpath expr="//field[@name='x_department_id']" position="before">
                    <field name="x_bank_account_id"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>