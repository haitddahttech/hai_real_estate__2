<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="custom_layout" inherit_id="web.layout">
            <xpath expr="//title" position="replace">
                    <title>Công ty TNHH Phát triển Phú Mỹ Hưng</title>  <!-- Change this to whatever you want -->
            </xpath>
        </template>


        <record id="view_users_state_tree" model="ir.ui.view">
            <field name="name">res.users.list.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <list position="inside">
                    <field name="saled_amount" widget="monetary" options="{'currency_field': 'company_currency_id'}"/>
                    <field name="count_customers"/>
                    <field name="customer_ids" widget="many2many_tags" options="{'no_create': True, 'no_open': True}"/>
                </list>
            </field>
        </record>

        <record id="view_users_form_customer_manager_inherit" model="ir.ui.view">
            <field name="name">view.users.form.customer_manager.inherit</field>
            <field name="model">res.users</field>
            <field name="priority" eval="100"/>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Customer Information" name="other">
                        <group>
                            <group string="Customer" name="customer_ids">
                                <field name="customer_ids">
                                    <list create="false" delete="false">
                                        <field name="name"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="contact_address"/>
                                    </list>
                                </field>
                            </group>
                            <group string="Statistics">
                                <field name="count_customers"/>
                                <field name="saled_amount" options="{'currency_field': 'company_currency_id'}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>