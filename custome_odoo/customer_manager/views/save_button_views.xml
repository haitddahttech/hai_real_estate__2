<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Add Save button to Product Template Form -->
        <record id="view_product_template_form_save_button" model="ir.ui.view">
            <field name="name">product.template.form.save.button</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_save_record" 
                                string="Save" 
                                type="object" 
                                class="oe_highlight"
                                invisible="not id"/>
                    </header>
                </xpath>
            </field>
        </record>

        <!-- Add Save button to Partner (Contact) Form -->
        <record id="view_partner_form_save_button" model="ir.ui.view">
            <field name="name">res.partner.form.save.button</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="action_save_record" 
                            string="Save" 
                            type="object" 
                            class="oe_highlight"
                            invisible="not id"/>
                </xpath>
            </field>
        </record>

        <!-- Add Save button to User Form -->
        <record id="view_users_form_save_button" model="ir.ui.view">
            <field name="name">res.users.form.save.button</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_save_record" 
                                string="Save" 
                                type="object" 
                                class="oe_highlight"
                                invisible="not id"/>
                    </header>
                </xpath>
            </field>
        </record>

        <!-- Add Save button to Product Category Form -->
        <record id="view_product_category_form_save_button" model="ir.ui.view">
            <field name="name">product.category.form.save.button</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="action_save_record" 
                                string="Save" 
                                type="object" 
                                class="oe_highlight"
                                invisible="not id"/>
                    </header>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
