<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Discount Config Form View -->
    <record id="view_product_discount_config_form" model="ir.ui.view">
        <field name="name">product.discount.config.form</field>
        <field name="model">product.discount.config</field>
        <field name="arch" type="xml">
            <form string="Cấu hình giảm giá">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Ví dụ: Giảm giá mua sỉ 5 căn"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="discount_type" widget="radio"/>
                            <field name="discount_value"/>
                        </group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Discount Config List View -->
    <record id="view_product_discount_config_tree" model="ir.ui.view">
        <field name="name">product.discount.config.list</field>
        <field name="model">product.discount.config</field>
        <field name="arch" type="xml">
            <list string="Danh sách giảm giá" editable="bottom">
                <field name="name"/>
                <field name="discount_type"/>
                <field name="discount_value"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_discount_config" model="ir.actions.act_window">
        <field name="name">Cấu hình giảm giá</field>
        <field name="res_model">product.discount.config</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Extend Product Template Form View to add Discount Many2many -->
    <record id="view_product_template_form_discount_inherit" model="ir.ui.view">
        <field name="name">product.template.form.discount.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Cấu hình Giảm Giá" name="discount_config">
                    <group>
                        <group string="Giảm giá được phép (hiển thị trên portal)">
                            <field name="discount_config_ids" widget="many2many_tags" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="discount_type"/>
                                    <field name="discount_value"/>
                                </list>
                            </field>
                        </group>
                        <group string="Giảm giá đã chọn (hiển thị trong PDF)">
                            <field name="selected_discount_ids" widget="many2many_tags" nolabel="1">
                                <list>
                                    <field name="name"/>
                                    <field name="discount_type"/>
                                    <field name="discount_value"/>
                                </list>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
