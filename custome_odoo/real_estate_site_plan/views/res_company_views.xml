<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Inherit res.company form view to add bank account fields -->
    <record id="view_company_form_bank_info" model="ir.ui.view">
        <field name="name">res.company.form.bank.info</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <!-- Add bank info after the email field -->
            <xpath expr="//field[@name='email']" position="after">
                <separator string="Thông tin ngân hàng" colspan="2"/>
                <field name="bank_account_ids" nolabel="1" colspan="2">
                    <list editable="bottom">
                        <field name="sequence" widget="handle"/>
                        <field name="bank_name"/>
                        <field name="bank_account_holder_name"/>
                        <field name="bank_account_number"/>
                        <field name="swift_code"/>
                        <field name="payment_qr_code" widget="image" class="oe_avatar" options="{'size': [50, 50]}"/>
                    </list>
                    <form>
                        <sheet>
                            <group>
                                <group>
                                    <field name="bank_name"/>
                                    <field name="bank_account_holder_name"/>
                                    <field name="bank_account_number"/>
                                </group>
                                <group>
                                    <field name="swift_code"/>
                                    <field name="sequence"/>
                                    <field name="active"/>
                                </group>
                            </group>
                            <group string="Mã QR Chuyển khoản">
                                <field name="payment_qr_code" widget="image" nolabel="1"/>
                            </group>
                        </sheet>
                    </form>
                </field>
            </xpath>
        </field>
    </record>

</odoo>
