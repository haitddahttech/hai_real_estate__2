<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Batch Upload Wizard View -->
    <record id="view_site_plan_image_upload_form" model="ir.ui.view">
        <field name="name">site.plan.image.upload.form</field>
        <field name="model">site.plan.image.upload</field>
        <field name="arch" type="xml">
            <form string="Tải lên nhiều ảnh">
                <group>
                    <field name="folder_id" invisible="1"/>
                    <field name="attachment_ids" widget="many2many_binary" string="Chọn các file ảnh"/>
                </group>
                <footer>
                    <button name="action_upload" string="Tải lên" type="object" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_site_plan_image_upload" model="ir.actions.act_window">
        <field name="name">Tải lên ảnh</field>
        <field name="res_model">site.plan.image.upload</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Site Plan Form View -->
    <record id="view_site_plan_form" model="ir.ui.view">
        <field name="name">site.plan.form</field>
        <field name="model">site.plan</field>
        <field name="arch" type="xml">
            <form string="Bản đồ mặt bằng">
<!--                <sheet>-->
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_portal_map" type="object" class="oe_stat_button" icon="fa-globe" string="Xem Portal Map"/>
                        <button name="action_view_polygons" type="object" class="oe_stat_button" icon="fa-map-marker">
                            <field name="polygon_count" widget="statinfo" string="Đa giác"/>
                        </button>
                    </div>
                    
                    <group>
                        <group>
                            <field name="name" placeholder="Ví dụ: Vinhomes Grand Park - Giai đoạn 1"/>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="deposit_date"/>
                        </group>
                        <group>
                            <field name="image" widget="binary" filename="image_filename"/>
                            <field name="image_filename" invisible="1"/>
                            <field name="cover_image" widget="image" class="oe_avatar"/>
                            <field name="catalog" widget="binary" filename="catalog_filename"/>
                            <field name="catalog_filename" invisible="1"/>
                            <field name="project_legal_1" widget="binary" filename="project_legal_1_filename"/>
                            <field name="project_legal_1_filename" invisible="1"/>
                            <field name="project_legal_2" widget="binary" filename="project_legal_2_filename"/>
                            <field name="project_legal_2_filename" invisible="1"/>
                            <field name="project_legal_3" widget="binary" filename="project_legal_3_filename"/>
                            <field name="project_legal_3_filename" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <field name="description" placeholder="Nhập mô tả..."/>
                    </group>
                    
                    <notebook>
                        <page string="Vẽ Bản Đồ" name="draw_polygons">
                            <div class="alert alert-info" role="alert">
                                <strong>Hướng dẫn sử dụng:</strong>
                                <ul>
                                    <li><strong>Đa giác:</strong> Click chuột lên canvas để thêm điểm, click đúp để hoàn tất</li>
                                    <li><strong>Hình chữ nhật:</strong> Click và kéo để tạo hình chữ nhật</li>
                                    <li><strong>Chỉnh sửa:</strong> Click và kéo các điểm của hình để điều chỉnh hình dạng</li>
                                    <li><strong>Xóa:</strong> Chọn một hình và nhấn nút Xóa (hoặc phím Delete)</li>
                                    <li><strong>Lưu:</strong> Chọn sản phẩm tương ứng và màu sắc, sau đó nhấn Lưu</li>
                                </ul>
                            </div>
                            
                            <field name="id" invisible="1"/>
                            <widget name="site_plan_canvas_widget"/>
                        </page>

                        <page string="Thư viện ảnh" name="image_folders">
                            <field name="folder_ids">
                                <list string="Thư mục">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="image_count"/>
                                </list>
                                <form string="Thư mục">
                                    <header>
                                        <button name="%(real_estate_site_plan.action_site_plan_image_upload)d" 
                                                string="Tải lên nhiều ảnh" 
                                                type="action" 
                                                class="btn-primary"
                                                context="{'default_folder_id': id}"/>
                                    </header>
                                    <group>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                    </group>
                                    <field name="image_ids" widget="one2many">
                                        <list string="Ảnh" editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="name"/>
                                            <field name="image" widget="image" options="{'size': [50, 50]}"/>
                                            <field name="description"/>
                                        </list>
                                        <kanban>
                                            <field name="id"/>
                                            <field name="name"/>
                                            <field name="image"/>
                                            <templates>
                                                <t t-name="card">
                                                    <div class="o_kanban_image">
                                                        <field name="image" widget="image" options="{'size': [100, 100]}"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <field name="name"/>
                                                    </div>
                                                </t>
                                            </templates>
                                        </kanban>
                                    </field>
                                </form>
                            </field>
                        </page>
                        
                        <page string="Danh sách Đa giác" name="polygons_list">
                            <field name="polygon_ids" nolabel="1">
                                <list string="Polygons" editable="bottom">
                                    <field name="name"/>
                                    <field name="product_template_id"/>
                                    <field name="polygon_type"/>
                                    <field name="color" widget="color"/>
                                    <field name="active" widget="boolean_toggle"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
<!--                </sheet>-->
            </form>
        </field>
    </record>

    <!-- Site Plan List View -->
    <record id="view_site_plan_list" model="ir.ui.view">
        <field name="name">site.plan.list</field>
        <field name="model">site.plan</field>
        <field name="arch" type="xml">
            <list string="Bản đồ mặt bằng">
                <field name="name"/>
                <field name="polygon_count"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Site Plan Search View -->
    <record id="view_site_plan_search" model="ir.ui.view">
        <field name="name">site.plan.search</field>
        <field name="model">site.plan</field>
        <field name="arch" type="xml">
            <search string="Tìm Bản đồ mặt bằng">
                <field name="name"/>
                <filter string="Đang hoạt động" name="active" domain="[('active', '=', True)]"/>
                <filter string="Đã lưu trữ" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>
    
    <!-- ========================================== -->
    <!-- ACTIONS - Define all actions first -->
    <!-- ========================================== -->    <!-- Site Plan Action -->
    <record id="action_site_plan" model="ir.actions.act_window">
        <field name="name">Bản đồ mặt bằng</field>
        <field name="res_model">site.plan</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo bản đồ mặt bằng đầu tiên của bạn
            </p>
            <p>
                Tải lên ảnh quy hoạch và vẽ các lô đất để đại diện cho bất động sản.
            </p>
        </field>
    </record>
    
    <!-- Polygons Action -->
    <record id="action_site_plan_polygons" model="ir.actions.act_window">
        <field name="name">Lô Đất</field>
        <field name="res_model">site.plan.polygon</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
    </record>
    
    <!-- Real Estate Products Action -->
    <record id="action_real_estate_products" model="ir.actions.act_window">
        <field name="name">Sản Phẩm BĐS</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('site_plan_polygon_id', '!=', False)]</field>
        <field name="context">{'search_default_is_real_estate': 1}</field>
    </record>
    
    <!-- Portal Maps Action (URL redirect) -->
    <record id="action_portal_maps" model="ir.actions.act_url">
        <field name="name">Xem Portal</field>
        <field name="url">/my/site-plans</field>
        <field name="target">new</field>
    </record>

    <!-- Portal Maps Action Current(URL redirect) -->
    <record id="action_portal_maps_current" model="ir.actions.act_url">
        <field name="name">Xem Portal</field>
        <field name="url">/my/site-plans</field>
        <field name="target">self</field>
    </record>
    
    <!-- Landing Page Action (URL redirect) -->
    <record id="action_landing_page" model="ir.actions.act_url">
        <field name="name">Landing Page</field>
        <field name="url">/real-estate</field>
        <field name="target">new</field>
    </record>

    <!-- Polygon Form View -->
    <record id="view_site_plan_polygon_form" model="ir.ui.view">
        <field name="name">site.plan.polygon.form</field>
        <field name="model">site.plan.polygon</field>
        <field name="arch" type="xml">
            <form string="Lô đất">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="site_plan_id"/>
                            <field name="product_template_id"/>
                        </group>
                        <group>
                            <field name="polygon_type"/>
                            <field name="color" widget="color"/>
                            <field name="active" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <group>
                        <field name="coordinates" widget="text"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Polygon list View -->
    <record id="view_site_plan_polygon_list" model="ir.ui.view">
        <field name="name">site.plan.polygon.list</field>
        <field name="model">site.plan.polygon</field>
        <field name="arch" type="xml">
            <list string="Danh sách Lô đất">
                <field name="name"/>
                <field name="site_plan_id"/>
                <field name="product_template_id"/>
                <field name="polygon_type"/>
                <field name="color" widget="color"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>



</odoo>
